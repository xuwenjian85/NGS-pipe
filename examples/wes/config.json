{
    "resources":{
        "H_sapiens_hg19":{
            "reference": "../resources/ucsc.hg19.fasta",
            "referenceFai": "../resources/ucsc.hg19.fasta.fai",
            "referenceDict": "../resources/ucsc.hg19.dict",
            "regions": "../resources/nexterarapidcapture_expandedexome_targetedregions.bed",
            "bwaIndex": "../resources/ucsc.hg19.fasta"
        },
        "general":{
            "sequencingAdapter": "../resources/TruSeq2-PE.fa"
        }
    },
    "tools":{
        "bwa":{
            "mem":{
                "call":"bwa mem ",
                "params": "-M ",
                "scratch": "2000",
                "memory": "2000",
                "time": "235",
                "threads": 24
            }
        },
        "samtools":{
            "call": "samtools ",
            "flagstat":{
                "scratch":"2000",
                "mem": "4000",
                "time": "20",
                "threads": 8,
                "params": ""
            },
            "index":{
                "scratch": "2000",
                "mem": "2000",
                "time": "100",
                "threads": 8
            },
            "mpileup":{
                "params": "-B -q 25 -Q 20",
                "outputTags": "DP,DP4,SP,DPR,DV",
                "scratch": "8000",
                "mem": "8000",
                "time": "1400",
                "threads": 8
            },
            "rmSecondary":{
                "scratch": "4000",
                "mem": "4000",
                "time": "235",
                "threads": 8
            },
            "rmDuplicates":{
                "threads": 8,
                "scratch": "2000",
                "mem": "2000",
                "time": "235"
            }
        },
        "picard":{
            "call": "picard -Xmx10G ",
            "markduplicates":{
                "removeDuplicates": "false",
                "createIndex": "false",
                "quiet": "false",
                "mem": "12000",
                "time": "1400",
                "scratch": "12000",
                "threads": 8,
                "params": "ASSUME_SORTED=true MAX_FILE_HANDLES_FOR_READ_ENDS_MAP=1000 MAX_RECORDS_IN_RAM=500000 REMOVE_DUPLICATES=false CREATE_INDEX=true"
            },
            "fixMateInformation":{
                "sortOrder": "coordinate",
                "mem": "12000",
                "time": "1400",
                "scratch": "12000",
                "threads": 8,
                "assume_sorted": "false",
                "params": "MAX_RECORDS_IN_RAM=500000"
            },
            "mergeBams":{
                "threads": 8,
                "mem": "12000",
                "time": "1400",
                "scratch": "12000",
                "assume_sorted": "true",
                "useOrphans": "N",
                "params": ""
            }
        },
        "varscan":{
            "call": "varscan -Xmx20g ",
            "somatic":{
                "params": "--min-coverage 10 --strand-filter 1 --output-vcf 1 --min-var-freq 0 --somatic-p-value 0.99 --p-value 0.99 ",
                "threads" : 8,
                "mem": "24000",
                "time": "1400",
                "scratch": "24000"
            }
        },
        "fastqc":{
            "file" : "fastqc",
            "call" : "fastqc",
            "scratch": "10000",
            "mem": "10000",
            "time": "60",
            "threads": 8,
            "params": ""
        },
        "qualimap":{
            "call": "qualimap ",
            "regions": "../resources/nexterarapidcapture_expandedexome_targetedregions.bed_qual.bed",
            "threads": 8,
            "mem": "24000",
            "time": "1400",
            "scratch": "16000",
            "params": ""
        },
        "trimmomatic": {
            "call": "trimmomatic -Xmx12G ",
            "scratch": "1000",
            "mem": "4000",
            "time": "640",
            "paired": {
                "slidingwindow": "4",
                "threads": 8,
                "phred": "-phred33",
                "mode": "PE",
                "minQual": "2",
                "seedmismatches": "1",
                "palindrom": "30",
                "min_adapt_len": "1",
                "keep_both": "true",
                "minlen": "50",
                "score": "7"
            }
        }
    }
}
